<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_led_control"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    tools:context="com.example.jura.centralno.CentralnoControl">


    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/secondView"
        android:layout_toStartOf="@id/secondView"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/prikaz_view"
            android:layout_weight="1.00"
            android:background="@color/colorPrimaryDark"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium.Inverse"
            android:padding="4dp"

            android:textColor="@android:color/white" />
    </LinearLayout>

    <View
        android:id="@+id/secondView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:id="@+id/thirdLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/secondView"
        android:layout_toEndOf="@id/secondView"
        android:orientation="vertical">


        <Button
            android:text="@string/izvje_e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:background="@drawable/my_button"
            android:textColor="@android:color/white" />

        <Button
            android:text="@string/temperaturamin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button3"
            android:background="@drawable/my_button"
            android:textColor="@android:color/white" />

        <Button
            android:text="@string/temperatura"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:background="@drawable/my_button"
            android:textColor="@android:color/white" />

        <Button
            android:text="@string/gre_ke"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:background="@drawable/my_button"
            android:textColor="@android:color/white" />

        <Button
            android:text="@string/odspoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/button6"
            android:background="@drawable/my_button"
            android:textStyle="normal|bold"
            android:textColor="@android:color/white"
            android:textAlignment="center" />
    </LinearLayout>


</RelativeLayout>